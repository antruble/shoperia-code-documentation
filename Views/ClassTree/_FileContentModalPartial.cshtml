@model ShoperiaDocumentation.Models.FileContentViewModel

<div id="fileModalContent">
    <div class="flex justify-between items-center">
        <h2 class="text-2xl font-bold">@Model.FileName</h2>
        <button class="ml-2 bg-green-500 text-white px-2 py-1 rounded" onclick="showCreateMethodForm()">Create</button>
    </div>
    <div class="mt-4">
        @foreach (var method in Model.Methods)
        {
            <div class="mb-6">
                <h3 class="text-xl font-semibold @(method.Status == "New" ? "text-green-500" : "text-blue-500")">@method.Name</h3>
                <p>@method.Description</p>
                <button class="mt-2 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700" onclick="openCodeWindow('@method.FullCode')">Kód megnyitása</button>
                @if (User.IsInRole("Admin"))
                {
                    <button class="mt-2 px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-700" onclick="showEditMethodForm(@method.Id, '@method.Name', '@method.Status', '@method.FullCode', '@method.Description')">Edit</button>
                    <button class="mt-2 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-700" onclick="deleteMethod(@method.Id)">Delete</button>
                    @* <button class="mt-2 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-700" onclick="asd()">Delete</button> *@
                }
            </div>
        }
    </div>
</div>



